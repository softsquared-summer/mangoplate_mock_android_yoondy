<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".src.main.my_info.event.event_detail.EventDetailActivity">

    <ImageView
        android:id="@+id/event_detail_iv_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_left_arrow_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/event"
        android:textColor="@color/orange"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/event_detail_iv_back_btn"
        app:layout_constraintStart_toEndOf="@+id/event_detail_iv_back_btn"
        app:layout_constraintTop_toTopOf="@+id/event_detail_iv_back_btn" />

    <ImageView
        android:id="@+id/event_detail_iv_kakaotalk_btn"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_kakaotalk"
        app:layout_constraintBottom_toBottomOf="@+id/event_detail_iv_back_btn"
        app:layout_constraintEnd_toStartOf="@+id/event_detail_iv_share_btn"
        app:layout_constraintTop_toTopOf="@+id/event_detail_iv_back_btn" />

    <ImageView
        android:id="@+id/event_detail_iv_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/event_detail_iv_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/event_detail_iv_back_btn" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_detail_iv_back_btn">

        <ImageView
            android:id="@+id/event_detail_iv_event_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>